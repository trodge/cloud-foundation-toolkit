apiVersion: kpt.dev/v1alpha1
kind: Kptfile
metadata:
  name: billing-account-iam
packageMetadata:
  shortDescription: Configure permissions for your billing account.
openAPI:
  definitions:
    io.k8s.cli.setters.billing-account:
      description: ID of billing account
      x-k8s-cli:
        setter:
          name: billing-account
          value: ${BILLING_ACCOUNT_ID?}
          setBy: PLACEHOLDER
    io.k8s.cli.setters.billing-role:
      description: role to assign
      x-k8s-cli:
        setter:
          name: billing-role
          value: viewer
          setBy: package-default
    io.k8s.cli.setters.iam-name:
      description: IAM member to grant role
      x-k8s-cli:
        setter:
          name: iam-name
          value: ${IAM_NAME?}
          setBy: PLACEHOLDER
    io.k8s.cli.substitutions.role-sub:
      x-k8s-cli:
        substitution:
          name: role-sub
          pattern: roles/billing.ROLE_SETTER
          values:
          - marker: ROLE_SETTER
            ref: '#/definitions/io.k8s.cli.setters.billing-role'
